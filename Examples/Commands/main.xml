<Window xmlns:x="http://consoleframework.org/xaml.xsd">
  <Window.Resources>
    <NotBooleanConverter x:Key="1" x:Id="notConverter"/>
  </Window.Resources>
  <Panel>
    <CheckBox x:Id="ch" Name="checkbox" Caption="Enable button" Checked="False"></CheckBox>
    <Button Disabled="{Binding Checked, Source={Ref ch}, Converter={Ref notConverter}}" Command="{Binding MyCommand, Mode=OneTime}">BlaBlaBla</Button>
  </Panel>
</Window>